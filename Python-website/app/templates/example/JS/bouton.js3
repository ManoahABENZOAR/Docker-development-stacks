function voirstock(alm, alm2){
			node=document.getElementById(alm);
			node2=document.getElementById(alm2);
			
			if (node.style.display=="none") {
			node.style.display="table-cell";
			node2.style.display="table-cell";
			}else{
				node.style.display = "none";
				node2.style.display="none";
			}
			
}

function addCaddie(abc,abcU,abc2,abcR,abcD){
		nbA=document.getElementById(abc);
		Prix=document.getElementById(abc2);
		PrixU=document.getElementById(abcU);
		RES=document.getElementById(abcR);
		RESD=document.getElementById(abcD);
		
		var max = RES.innerHTML;
		maxD=RESD.innerHTML;
		var nbAB=parseInt(nbA.innerHTML, 10);
		if (nbAB+1 <= maxD){
		nbAB=nbAB+1;
		max=max-1;
		var PrixUB=parseFloat(PrixU.innerHTML);
			Prix.innerHTML=Math.round(PrixUB*nbAB * 100) / 100;
			nbA.innerHTML=nbAB;
			RES.innerHTML=max;
		}else {
			var PrixUB=parseFloat(PrixU.innerHTML);
			Prix.innerHTML=Math.round(PrixUB*nbAB * 100) / 100;
			nbA.innerHTML=nbAB;
			RES.innerHTML=max;
		}			
}

function supCaddie(abc,abcU,abc2,abcR,abcD){
		nbA=document.getElementById(abc);
		Prix=document.getElementById(abc2);
		PrixU=document.getElementById(abcU);
		RES=document.getElementById(abcR);
		RESD=document.getElementById(abcD);
		
		var max = RES.innerHTML;
		maxD=RESD.innerHTML;
		var nbAB=parseInt(nbA.innerHTML, 10);
		if (nbAB-1 >=0 ){
		nbAB=nbAB-1;
		max=parseInt(max, 10)+1;
		var PrixUB=parseFloat(PrixU.innerHTML);
			Prix.innerHTML=Math.round(PrixUB*nbAB * 100) / 100;
			nbA.innerHTML=nbAB;
			RES.innerHTML=max;
		}else {
			var PrixUB=parseFloat(PrixU.innerHTML);
			Prix.innerHTML=Math.round(PrixUB*nbAB * 100) / 100;
			nbA.innerHTML=nbAB;
			RES.innerHTML=max;
		}
			
}

